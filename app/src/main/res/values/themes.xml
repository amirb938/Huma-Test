    <style name="My.TitleView" parent="Widget.Leanback.TitleView">
        <item name="browseTitleViewLayout">@layout/layout_browse_title</item>
    </style>


    <style name="MyCustomBrowseStyle" parent="Theme.Leanback">
        <item name="rowHeaderStyle">@style/MyCustomRowHeaderStyle</item>
        <item name="rowHeaderDockStyle">@style/MyCustomRowHeaderDock</item>
        <item name="browseTitleViewStyle">@style/My.TitleView</item>

